// IDs
#core
  &-results
    margin-top: 2em
    width: 100%

    &-button
      display: block
      margin: 0 auto

    &-table
      overflow: auto

// Classes
#core
  &-results
    & .buddy
      font-size: 1.3em
      font-variant: small-caps
      font-weight: bold

      &:first-letter
        text-transform: uppercase

    & .thing
      &::after
        content: ","
        display: inline-block
        margin-right: .31em

      &:last-child
        &::after
          display: none

