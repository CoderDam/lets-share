// IDs
#app
  &-how
    &-title
      margin-bottom: 0

      &-arrow
        background: none
        border: 0
        color: inherit
        cursor: pointer
        display: block
        float: right

        &::after
          content: "â—¢"
          display: block
          transform: rotate(45deg);

// Classes
#app
  & .how
    &-text
      height: 0
      overflow: hidden
      transition: .5s

      &--visible
        height: 15em


/*****************************
 *          DESKTOP          *
 *****************************/
@media (min-width: 768px)
  // IDs


  // Classes
  #app
    & .how
      &-text
        &--visible
          height: 10em
