/*****************************
 *           MOBILE          *
 *****************************/
// Blocks
body
  color: darkslategrey
  background-color: rgb(218, 241, 218)
  font-family: Ubuntu, sans-serif

hr
  border: 1px solid transparent
  border-top-color: green
  margin: 1em 0

a
  color: black
  position: relative
  text-decoration: none

  &:hover
  &:focus
    outline: 0

    &::after
      animation: underline .5s both
      border-top: 1px solid black
      bottom: -.1em
      content: ""
      display: block
      left: 50%
      position: absolute

h1
  margin: 0 0 1em 0

h2, h3
  margin-top: .4em

// IDs

// Classes
.button
  border-radius: 5px
  background-color: lightgreen
  border: 2px solid lightgreen
  box-sizing: border-box
  color: inherit
  font-size: 1em
  font-variant: small-caps
  font-weight: bold
  letter-spacing: .06em
  outline: 0
  padding: .5em 1em
  position: relative

  &:hover
  &:focus
    border-bottom-color: green
    cursor: pointer

  &:active
    transform: scale(.95)

.input
  background-color: transparent
  border: 2px solid transparent
  border-bottom-color: green
  color: inherit
  font-family: inherit
  font-size: inherit
  margin: .3em 0
  padding: 0 .2em
  outline: 0

  &[type="number"]
    padding-right: 0
    text-align: right
    letter-spacing: .2em

  &:focus
    background-color: white

.delete
  background-color: transparent
  border-radius: 100%
  border: 0
  color: darkorchid
  cursor: pointer
  height: 1em
  line-height: .5em
  margin-left: .25em
  outline: 0
  position: relative
  width: 1em

  &:hover
  &:focus
    background-color: darkslategrey
    transition: background 3s

.table
  margin: 1em auto

  & thead
    background: darkslategrey
    color: white

  & tbody
    & tr
      &:nth-child(odd)
        background-color: gainsboro

      &:nth-child(even)
        background-color: silver

  & th
  & td
    padding: .3em 1em

  & input[type="number"]
    width: 5em

  & .amount
    text-align: right


/*****************************
 *          XS MOBILE          *
 *****************************/
@media (max-width:360px)
  // Blocks
  h1
    font-size: 1.7em

  h2
    font-size: 1.3em


/*****************************
 *          DESKTOP          *
 *****************************/
@media (min-width:768px)
  // Blocks
  // IDs
  // Classes
  .delete
    height: 2em
    line-height: 1em
    margin-left: .5em
    outline: 0
    position: relative
    width: 2em

    &::after
      border: 2px solid transparent
      border-bottom-color: darkorchid
      border-radius: 100%
      border-right-color: darkorchid
      content: ""
      display: block
      height: calc(2em - 2px)
      left: -1px
      position: absolute
      top: -1px
      transition: transform .2s
      width: calc(2em - 2px)

    &:focus
    &:hover
      &::after
        animation: turn linear 1s infinite


/*****************************
 *        ANIMATIONS         *
 *****************************/
@keyframes turn
  100%
    transform-origin: center center
    transform: rotate(1turn)

@keyframes underline
  0%
    width: 0
  100%
    left: 0
    width: 100%
